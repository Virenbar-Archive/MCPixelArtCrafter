<UserControl x:Class="MapColorCount"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MCPixelArtCrafterWPF"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <Rectangle Name="R_Color" Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="16" Margin="5" VerticalAlignment="Center" Width="16" RenderTransformOrigin="0.5,0.5" Grid.Column="0">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="0" />
                    <TranslateTransform />
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Label Name="lbl_Count" Content="Label" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0" Grid.Column="1" />
    </Grid>
</UserControl>